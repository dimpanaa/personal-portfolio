<style>
  /* ===== HEADER ===== */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--space-md) 0;
    background: linear-gradient(to bottom, var(--bg-primary), transparent);
  }

  .header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-family: var(--font-serif);
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: 0.05em;
  }

  .logo:hover {
    color: var(--accent-primary);
  }

  .nav {
    display: flex;
    gap: var(--space-xl);
  }

  .nav a {
    color: var(--text-secondary);
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: color var(--transition-fast);
  }

  .nav a:hover {
    color: var(--text-primary);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
  }

  .hamburger span {
    width: 28px;
    height: 2px;
    background: var(--text-primary);
    transition: all var(--transition-normal);
  }

  /* ===== HERO ===== */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 80px;
    position: relative;
    z-index: 1;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-xl);
    align-items: center;
  }

  .hero-title {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 400;
    font-style: italic;
    line-height: 1.15;
    margin-bottom: var(--space-xl);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-xl);
    border: 1px solid var(--gray-500);
    border-radius: var(--radius-full);
    font-size: 1.1rem;
    margin-bottom: var(--space-xl);
  }

  .badge-divider {
    color: var(--gray-500);
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-primary);
    font-size: 1.1rem;
    transition: all var(--transition-normal);
  }

  .hero-cta:hover {
    color: var(--accent-primary);
  }

  .cta-arrow {
    font-size: 1.4rem;
    transition: transform var(--transition-normal);
  }

  .hero-cta:hover .cta-arrow {
    transform: translateX(5px);
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .image-oval {
    width: 350px;
    height: 440px;
    border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
    overflow: hidden;
    border: 2px solid var(--gray-600);
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      var(--bg-tertiary),
      var(--bg-secondary)
    );
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-500);
  }

  .image-placeholder svg {
    width: 50%;
    height: 50%;
  }

  /* ===== SECTIONS ===== */
  .section-title {
    text-align: center;
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .section-subtitle {
    text-align: center;
    margin-bottom: var(--space-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    font-size: 1.15rem;
  }

  /* ===== ABOUT ===== */
  .about-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .about-intro {
    font-size: 1.35rem;
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .about-intro strong {
    color: var(--text-primary);
  }

  .about-content > p {
    font-size: 1.15rem;
    line-height: 1.7;
  }

  .about-interests {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
    margin-top: var(--space-xl);
  }

  .interest-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .interest-icon {
    font-size: 1.4rem;
  }

  /* ===== PORTFOLIO ===== */
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .project-card {
    background: var(--bg-card);
    border: 1px solid var(--gray-800);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    cursor: pointer;
  }

  .project-card:hover {
    border-color: var(--gray-600);
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  }

  .project-image {
    aspect-ratio: 16/10;
    background: var(--bg-tertiary);
  }

  .project-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-500);
  }

  .project-placeholder svg {
    width: 40%;
    height: 40%;
  }

  .project-info {
    padding: var(--space-lg);
  }

  .project-info h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .project-info p {
    font-size: 1rem;
    margin-bottom: var(--space-md);
  }

  .project-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .project-tags span {
    padding: var(--space-xs) var(--space-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ===== EDUCATION - FIXED TIMELINE ===== */
  .education-timeline {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .edu-row {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    position: relative;
  }

  .edu-row-left {
    justify-content: flex-start;
  }

  .edu-row-right {
    justify-content: flex-end;
  }

  .edu-airplane {
    font-size: 1.8rem;
    transform: rotate(-30deg);
    opacity: 0.8;
  }

  .edu-pin {
    font-size: 1.6rem;
    flex-shrink: 0;
  }

  .edu-card {
    background: rgba(255, 255, 255, 0.03);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    border: 1px solid var(--gray-800);
    max-width: 450px;
  }

  .edu-card h3 {
    font-family: var(--font-sans);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .edu-location {
    color: var(--gray-400);
    font-weight: 400;
    font-size: 1rem;
  }

  .edu-degree {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-xs);
  }

  .edu-score {
    font-size: 0.95rem;
    color: var(--gray-400);
  }

  /* Connecting lines */
  .edu-line {
    position: absolute;
    border: 2px dashed var(--gray-600);
    pointer-events: none;
  }

  .edu-line-1 {
    width: 200px;
    height: 80px;
    border-left: none;
    border-top: none;
