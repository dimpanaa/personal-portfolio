---
import Layout from "../layouts/Layout.astro";
import V8Engine from "../components/V8Engine.astro";
import Antigravity from "../components/Antigravity.jsx";
import Education from "../components/Education.astro";
import Experience from "../components/Experience.astro";
import Certifications from "../components/Certifications.astro";
import ShinyText from "../components/ShinyText.jsx";
import { getCollection } from "astro:content";

// Fetch projects from content collection, sorted by order
const projects = await getCollection("projects");
const sortedProjects = [...projects].sort(
  (a, b) => (a.data.order as number) - (b.data.order as number),
);

// Fetch social links
import { getEntry } from "astro:content";
const socials = await getEntry("socials", "links");
---

<Layout title="Dimpana Jadhav | Mechanical Engineer & Creator">
  <!-- V8 Engine Background (Hero Only) -->
  <V8Engine />

  <!-- Antigravity Background (Scrolls into view/Fixed behind) -->
  <div class="antigravity-bg">
    <Antigravity
      client:only="react"
      count={300}
      magnetRadius={6}
      ringRadius={7}
      waveSpeed={0.4}
      waveAmplitude={1}
      particleSize={1.5}
      lerpSpeed={0.05}
      color="#cf4040"
      autoAnimate={false}
      particleVariance={1}
      rotationSpeed={0}
      depthFactor={1}
      pulseSpeed={3}
      particleShape="capsule"
      fieldStrength={10}
    />
  </div>

  <!-- Navigation -->
  <header class="header">
    <div class="container">
      <a href="#" class="logo">DJ</a>
      <nav class="nav" id="main-nav">
        <a href="#about">About</a>
        <a href="#portfolio">Portfolio</a>
        <a href="#experience">Experience</a>
        <a href="#education">Education</a>
        <a href="#credentials">Credentials</a>
        <a href="#contact">Contact</a>

        <div class="nav-socials">
          {
            socials?.data.linkedin && (
              <a
                href={socials.data.linkedin}
                target="_blank"
                rel="noopener"
                aria-label="LinkedIn"
              >
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              </a>
            )
          }
          {
            socials?.data.github && (
              <a
                href={socials.data.github}
                target="_blank"
                rel="noopener"
                aria-label="GitHub"
              >
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              </a>
            )
          }
        </div>
      </nav>
      <button class="hamburger" id="hamburger" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero section" id="hero">
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <h1 class="hero-title animate-fade-in">
            Hi there!<br />
            I am <span class="dimpana-text">
              <ShinyText
                client:load
                text="Dimpana"
                disabled={false}
                speed={1.5}
                delay={0}
                color="#b5b5b5"
                shineColor="#ffffff"
                hoverOnly={true}
              />
            </span>
            <span class="hero-suffix"
              ><span class="desktop-space"> </span>and<br class="desktop-br" /> I
              love to create.</span
            >
          </h1>
          <div class="hero-badge animate-fade-in animate-delay-2">
            <span>Dimpana P Jadhav</span>
            <span class="badge-divider">|</span>
            <span>Mechanical Engineer</span>
          </div>
          <a href="#contact" class="hero-cta animate-fade-in animate-delay-3">
            <span class="cta-arrow">‚Ü≥</span>
            <span>Work with me today</span>
          </a>
        </div>
        <div class="hero-image animate-fade-in animate-delay-1">
          <div class="image-oval">
            <img
              src="/images/profile.jpg"
              alt="Dimpana Jadhav"
              class="profile-photo"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section about" id="about">
    <div class="container">
      <h2 class="section-title">Personal Information</h2>
      <div class="about-content">
        <p class="about-intro">
          I am currently pursuing my Bachelor's degree in Mechanical Engineering
          at
          <strong>B N M Institute of Technology</strong>. My passion lies in the
          intricate world of aircraft engines, automotive systems, and the
          artistry of 3D mechanical design.
        </p>
        <p>
          Beyond engineering, I find solace in literature, exploring the depths
          of human creativity through written words. This blend of technical
          precision and artistic appreciation shapes my unique approach to
          mechanical design.
        </p>
        <div class="about-interests">
          <div class="interest-item">
            <span class="interest-icon">‚úàÔ∏è</span>
            <span>Aircraft & Engines</span>
          </div>
          <div class="interest-item">
            <span class="interest-icon">üöó</span>
            <span>Automobiles</span>
          </div>
          <div class="interest-item">
            <span class="interest-icon">üìö</span>
            <span>Literature</span>
          </div>
          <div class="interest-item">
            <span class="interest-icon">üîß</span>
            <span>3D CAD Design</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section class="section portfolio" id="portfolio">
    <div class="container">
      <h2 class="section-title">My Work</h2>

      <div class="portfolio-grid">
        {
          sortedProjects.map((project) => (
            <article class="project-card">
              <a href={`/projects/${project.slug}`} class="project-link">
                <div class="project-image">
                  <div class="project-placeholder">
                    <svg viewBox="0 0 100 100" fill="none">
                      <rect
                        x="20"
                        y="30"
                        width="60"
                        height="40"
                        rx="5"
                        stroke="currentColor"
                        stroke-width="2"
                        fill="none"
                      />
                      <circle
                        cx="35"
                        cy="70"
                        r="8"
                        stroke="currentColor"
                        stroke-width="2"
                        fill="none"
                      />
                      <circle
                        cx="65"
                        cy="70"
                        r="8"
                        stroke="currentColor"
                        stroke-width="2"
                        fill="none"
                      />
                    </svg>
                  </div>
                </div>
                <div class="project-info">
                  <h3>{project.data.title}</h3>
                  <p>{project.data.description}</p>
                  <div class="project-tags">
                    {project.data.tags.map((tag: string) => (
                      <span>{tag}</span>
                    ))}
                  </div>
                  <span class="view-details">View Details ‚Üí</span>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <Experience />

  <!-- Education Section -->
  <Education />

  <!-- Certifications & Achievements -->
  <Certifications />

  <!-- Contact Section -->
  <section class="section contact" id="contact">
    <div class="container">
      <h2 class="section-title">Get In Touch</h2>
      <p class="section-subtitle">
        Ready to collaborate? Let's create something amazing together.
      </p>

      <div class="contact-content">
        <a
          href={`mailto:${socials?.data.email}`}
          class="btn btn-primary btn-large"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
            ></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          Work With Me
        </a>

        <div class="social-links">
          {
            socials?.data.linkedin && (
              <a
                href={socials.data.linkedin}
                target="_blank"
                rel="noopener"
                aria-label="LinkedIn"
              >
                <svg
                  width="28"
                  height="28"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
              </a>
            )
          }
          {
            socials?.data.github && (
              <a
                href={socials.data.github}
                target="_blank"
                rel="noopener"
                aria-label="GitHub"
              >
                <svg
                  width="28"
                  height="28"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              </a>
            )
          }
          {
            socials?.data.instagram && (
              <a
                href={socials.data.instagram}
                target="_blank"
                rel="noopener"
                aria-label="Instagram"
              >
                <svg
                  width="28"
                  height="28"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p>
        &copy; <span id="year">2026</span> Dimpana Jadhav. Crafted with passion.
      </p>
    </div>
  </footer>
</Layout>

<style>
  /* ===== HEADER ===== */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--space-md) 0;
    background: linear-gradient(
      to bottom,
      rgba(18, 18, 18, 0.95) 0%,
      rgba(18, 18, 18, 0.85) 50%,
      rgba(18, 18, 18, 0.6) 80%,
      transparent 100%
    );
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-family: var(--font-serif);
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: 0.05em;
  }

  .logo:hover {
    color: var(--accent-primary);
  }

  .nav {
    display: flex;
    gap: var(--space-xl);
  }

  .nav-socials {
    display: none;
  }

  .nav a {
    color: var(--text-secondary);
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: color var(--transition-fast);
  }

  .nav a:hover {
    color: var(--text-primary);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
  }

  .hamburger span {
    width: 28px;
    height: 2px;
    background: var(--text-primary);
    transition: all var(--transition-normal);
  }

  /* ===== HERO ===== */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 80px;
    position: relative;
    z-index: 1;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-xl);
    align-items: center;
  }

  .hero-content {
    transform: translateX(-150px);
  }

  .hero-title {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 400;
    font-style: italic;
    line-height: 1.15;
    margin-bottom: var(--space-xl);
  }

  .dimpana-text {
    display: inline-block;
    font-weight: 700;
    font-size: 1.1em;
    letter-spacing: 0.1em;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-xl);
    border: 1px solid var(--gray-500);
    border-radius: var(--radius-full);
    font-size: 1.1rem;
    margin-bottom: var(--space-xl);
  }

  .badge-divider {
    color: var(--gray-500);
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-primary);
    font-size: 1.1rem;
    transition: all var(--transition-normal);
  }

  .hero-cta:hover {
    color: var(--accent-primary);
  }

  .cta-arrow {
    font-size: 1.4rem;
    transition: transform var(--transition-normal);
  }

  .hero-cta:hover .cta-arrow {
    transform: translateX(5px);
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .image-oval {
    width: 350px;
    height: 440px;
    border-radius: 88% 12% 90% 10% / 83% 11% 89% 17%;
    overflow: hidden;
    border: 2px solid var(--gray-600);
    transform: translateX(200px);
  }

  .profile-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  /* ===== SECTIONS ===== */
  .section-title {
    text-align: center;
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .section-subtitle {
    text-align: center;
    margin-bottom: var(--space-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    font-size: 1.15rem;
  }

  /* ===== ABOUT ===== */
  .about-content {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    padding: 0 var(--space-md);
  }

  .about-intro {
    font-size: 1.35rem;
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .about-intro strong {
    color: var(--text-primary);
  }

  .about-content > p {
    font-size: 1.15rem;
    line-height: 1.7;
  }

  .about-interests {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
    margin-top: var(--space-xl);
  }

  .interest-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .interest-icon {
    font-size: 1.4rem;
  }

  /* ===== PORTFOLIO ===== */
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .project-card {
    background: var(--bg-card);
    border: 1px solid var(--gray-800);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    cursor: pointer;
  }

  .project-card:hover {
    border-color: var(--gray-600);
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  }

  .project-image {
    aspect-ratio: 16/10;
    background: var(--bg-tertiary);
  }

  .project-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-500);
  }

  .project-placeholder svg {
    width: 40%;
    height: 40%;
  }

  .project-info {
    padding: var(--space-lg);
  }

  .project-info h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .project-info p {
    font-size: 1rem;
    margin-bottom: var(--space-md);
  }

  .project-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .project-tags span {
    padding: var(--space-xs) var(--space-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .view-details {
    display: inline-block;
    margin-top: var(--space-md);
    color: var(--accent-primary);
    font-size: 0.9rem;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .project-card:hover .view-details {
    opacity: 0.8;
  }

  /* ===== EDUCATION - FIXED TIMELINE ===== */
  .education-timeline {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .edu-row {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    position: relative;
  }

  .edu-row-left {
    justify-content: flex-start;
  }

  .edu-row-right {
    justify-content: flex-end;
  }

  .edu-airplane {
    font-size: 1.8rem;
    transform: rotate(-30deg);
    opacity: 0.8;
  }

  .edu-pin {
    font-size: 1.6rem;
    flex-shrink: 0;
  }

  .edu-card {
    background: rgba(255, 255, 255, 0.03);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    border: 1px solid var(--gray-800);
    max-width: 450px;
  }

  .edu-card h3 {
    font-family: var(--font-sans);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

