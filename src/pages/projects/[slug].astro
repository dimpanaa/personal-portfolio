---
// Dynamic project detail page
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} | Dimpana Jadhav`}>
  <div class="project-page">
    <div class="container">
      <a href="/#portfolio" class="back-link">
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Back to Portfolio
      </a>

      <article class="project-content">
        <header class="project-header">
          <h1 class="project-title">{project.data.title}</h1>
          <p class="project-description">{project.data.description}</p>
          <div class="project-tags">
            {
              project.data.tags.map((tag: string) => (
                <span class="tag">{tag}</span>
              ))
            }
          </div>
        </header>

        {
          project.data.image && (
            <div class="project-image">
              <img src={project.data.image} alt={project.data.title} />
            </div>
          )
        }

        <div class="project-body">
          <Content />
        </div>

        {/* Project Gallery */}
        {
          project.data.gallery && project.data.gallery.length > 0 && (
            <section class="project-gallery">
              <h2 class="gallery-title">Project Gallery</h2>
              <div class="gallery-grid">
                {project.data.gallery.map(
                  (
                    item: { type: string; src: string; caption?: string },
                    index: number,
                  ) => (
                    <figure class="gallery-item">
                      {item.type === "video" ? (
                        <video
                          controls
                          preload="metadata"
                          class="gallery-media gallery-video"
                        >
                          <source src={item.src} type="video/mp4" />
                          Your browser does not support the video tag.
                        </video>
                      ) : (
                        <img
                          src={item.src}
                          alt={item.caption || project.data.title}
                          class="gallery-media gallery-image"
                          data-index={index}
                          data-caption={item.caption || ""}
                        />
                      )}
                      {item.caption && (
                        <figcaption class="gallery-caption">
                          {item.caption}
                        </figcaption>
                      )}
                    </figure>
                  ),
                )}
              </div>
            </section>
          )
        }

        {/* Lightbox Overlay */}
        <div id="lightbox" class="lightbox">
          <div class="lightbox-backdrop"></div>
          <div class="lightbox-content">
            <button class="lightbox-close" aria-label="Close">&times;</button>
            <div class="lightbox-controls">
              <button class="lightbox-zoom-in" aria-label="Zoom in">+</button>
              <button class="lightbox-zoom-out" aria-label="Zoom out"
                >&minus;</button
              >
              <button class="lightbox-reset" aria-label="Reset zoom">↺</button>
            </div>
            <div class="lightbox-image-container">
              <img id="lightbox-img" src="" alt="" class="lightbox-img" />
            </div>
            <p id="lightbox-caption" class="lightbox-caption"></p>
          </div>
          <button class="lightbox-prev" aria-label="Previous">‹</button>
          <button class="lightbox-next" aria-label="Next">›</button>
        </div>
      </article>
    </div>
  </div>
</Layout>

<style>
  .project-page {
    background: var(--bg-primary);
    min-height: 100vh;
    padding: 100px 0 60px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    margin-bottom: 40px;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  .back-link svg {
    width: 20px;
    height: 20px;
  }

  .project-header {
    margin-bottom: 40px;
  }

  .project-title {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .project-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin: 0 0 20px 0;
    line-height: 1.6;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .tag {
    background: rgba(255, 59, 48, 0.1);
    color: var(--accent-primary);
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .project-image {
    margin-bottom: 40px;
    border-radius: 12px;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-body {
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .project-body :global(h2) {
    font-family: var(--font-serif);
    font-size: 1.6rem;
    color: var(--text-primary);
    margin: 40px 0 16px 0;
  }

  .project-body :global(h3) {
    font-size: 1.3rem;
    color: var(--text-primary);
    margin: 32px 0 12px 0;
  }

  .project-body :global(p) {
    margin: 0 0 20px 0;
  }

  .project-body :global(ul),
  .project-body :global(ol) {
    margin: 0 0 20px 0;
    padding-left: 24px;
  }

  .project-body :global(li) {
    margin-bottom: 8px;
  }

  .project-body :global(a) {
    color: var(--accent-primary);
    text-decoration: none;
  }

  .project-body :global(a:hover) {
    text-decoration: underline;
  }

  .project-body :global(code) {
    background: rgba(255, 255, 255, 0.05);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .project-body :global(pre) {
    background: rgba(255, 255, 255, 0.03);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 20px;
  }

  .project-body :global(blockquote) {
    border-left: 3px solid var(--accent-primary);
    padding-left: 20px;
    margin: 20px 0;
    color: var(--gray-400);
    font-style: italic;
  }

  @media (max-width: 600px) {
    .project-page {
      padding: 80px 0 40px;
    }

    .project-title {
      font-size: 1.8rem;
    }

    .project-description {
      font-size: 1.05rem;
    }

    .project-body {
      font-size: 1rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }

  /* ===== PROJECT GALLERY ===== */
  .project-gallery {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--gray-800);
  }

  .gallery-title {
    font-family: var(--font-serif);
    font-size: 1.8rem;
    color: var(--text-primary);
    margin-bottom: 30px;
    text-transform: none;
    letter-spacing: normal;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
  }

  .gallery-item {
    margin: 0;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--gray-800);
    transition:
      border-color 0.3s,
      transform 0.3s;
  }

  .gallery-item:hover {
    border-color: var(--gray-600);
    transform: translateY(-4px);
  }

  .gallery-media {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16/10;
    object-fit: cover;
  }

  video.gallery-media {
    background: #000;
  }

  .gallery-caption {
    padding: 12px;
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-align: center;
    background: rgba(255, 255, 255, 0.02);
  }

  .gallery-image {
    cursor: pointer;
  }

  .gallery-image:hover {
    opacity: 0.9;
  }

  /* ===== LIGHTBOX ===== */
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
  }

  .lightbox.active {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    cursor: pointer;
  }

  .lightbox-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .lightbox-close {
    position: absolute;
    top: -40px;
    right: -10px;
    background: none;
    border: none;
    color: white;
    font-size: 2.5rem;
    cursor: pointer;
    z-index: 10001;
    line-height: 1;
    padding: 0 10px;
    transition: color 0.2s;
  }

  .lightbox-close:hover {
    color: var(--accent-primary);
  }

  .lightbox-controls {
    position: absolute;
    top: -40px;
    left: 0;
    display: flex;
    gap: 8px;
    z-index: 10001;
  }

  .lightbox-controls button {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  .lightbox-controls button:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--accent-primary);
  }

  .lightbox-image-container {
    overflow: hidden;
    max-width: 90vw;
    max-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-img {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    transition: transform 0.2s ease;
    cursor: grab;
  }

  .lightbox-img:active {
    cursor: grabbing;
  }

  .lightbox-caption {
    color: var(--text-secondary);
    font-size: 0.9rem;
    text-align: center;
    margin-top: 16px;
    max-width: 600px;
  }

  .lightbox-prev,
  .lightbox-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    font-size: 3rem;
    padding: 20px 15px;
    cursor: pointer;
    z-index: 10001;
    transition: all 0.2s;
  }

  .lightbox-prev {
    left: 20px;
    border-radius: 8px;
  }

  .lightbox-next {
    right: 20px;
    border-radius: 8px;
  }

  .lightbox-prev:hover,
  .lightbox-next:hover {
    background: rgba(255, 255, 255, 0.2);
    color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .lightbox-prev,
    .lightbox-next {
      padding: 15px 10px;
      font-size: 2rem;
    }

    .lightbox-controls {
      top: -35px;
    }

    .lightbox-close {
      top: -35px;
    }
  }
</style>

<script>
  // Lightbox functionality
  document.addEventListener("DOMContentLoaded", () => {
    const lightbox = document.getElementById("lightbox");
    const lightboxImg = document.getElementById(
      "lightbox-img",
    ) as HTMLImageElement;
    const lightboxCaption = document.getElementById("lightbox-caption");
    const backdrop = document.querySelector(".lightbox-backdrop");
    const closeBtn = document.querySelector(".lightbox-close");
    const prevBtn = document.querySelector(".lightbox-prev");
    const nextBtn = document.querySelector(".lightbox-next");
    const zoomInBtn = document.querySelector(".lightbox-zoom-in");
    const zoomOutBtn = document.querySelector(".lightbox-zoom-out");
    const resetBtn = document.querySelector(".lightbox-reset");

    const galleryImages = document.querySelectorAll(".gallery-image");
    let currentIndex = 0;
    let currentZoom = 1;
    let translateX = 0;
    let translateY = 0;
    let isDragging = false;
    let startX = 0;
    let startY = 0;

    // Collect image sources (only images, not videos)
    const imageSources: { src: string; caption: string }[] = [];
    galleryImages.forEach((img) => {
      const imgEl = img as HTMLImageElement;
      imageSources.push({
        src: imgEl.src,
        caption: imgEl.dataset.caption || "",
      });
    });

    function openLightbox(index: number) {
      if (index < 0 || index >= imageSources.length) return;
      currentIndex = index;
      currentZoom = 1;
      translateX = 0;
      translateY = 0;
      updateTransform();

      lightboxImg.src = imageSources[index].src;
      if (lightboxCaption) {
        lightboxCaption.textContent = imageSources[index].caption;
      }
      lightbox?.classList.add("active");
      document.body.style.overflow = "hidden";
    }

    function closeLightbox() {
      lightbox?.classList.remove("active");
      document.body.style.overflow = "";
      lightboxImg.src = "";
    }

    function updateTransform() {
      lightboxImg.style.transform = `scale(${currentZoom}) translate(${translateX}px, ${translateY}px)`;
    }

    function zoomIn() {
      currentZoom = Math.min(currentZoom + 0.5, 5);
      updateTransform();
    }

    function zoomOut() {
      currentZoom = Math.max(currentZoom - 0.5, 0.5);
      if (currentZoom <= 1) {
        translateX = 0;
        translateY = 0;
      }
      updateTransform();
    }

    function resetZoom() {
      currentZoom = 1;
      translateX = 0;
      translateY = 0;
      updateTransform();
    }

    function showPrev() {
      if (currentIndex > 0) {
        openLightbox(currentIndex - 1);
      }
    }

    function showNext() {
      if (currentIndex < imageSources.length - 1) {
        openLightbox(currentIndex + 1);
      }
    }

    // Click handlers for gallery images
    galleryImages.forEach((img, index) => {
      img.addEventListener("click", () => openLightbox(index));
    });

    // Close handlers
    closeBtn?.addEventListener("click", closeLightbox);
    backdrop?.addEventListener("click", closeLightbox);

    // Navigation
    prevBtn?.addEventListener("click", showPrev);
    nextBtn?.addEventListener("click", showNext);

    // Zoom controls
    zoomInBtn?.addEventListener("click", zoomIn);
    zoomOutBtn?.addEventListener("click", zoomOut);
    resetBtn?.addEventListener("click", resetZoom);

    // Keyboard navigation
    document.addEventListener("keydown", (e) => {
      if (!lightbox?.classList.contains("active")) return;

      switch (e.key) {
        case "Escape":
          closeLightbox();
          break;
        case "ArrowLeft":
          showPrev();
          break;
        case "ArrowRight":
          showNext();
          break;
        case "+":
        case "=":
          zoomIn();
          break;
        case "-":
          zoomOut();
          break;
        case "0":
          resetZoom();
          break;
      }
    });

    // Mouse wheel zoom
    lightboxImg?.addEventListener("wheel", (e) => {
      e.preventDefault();
      if (e.deltaY < 0) {
        zoomIn();
      } else {
        zoomOut();
      }
    });

    // Pan/drag support
    lightboxImg?.addEventListener("mousedown", (e) => {
      if (currentZoom > 1) {
        isDragging = true;
        startX = e.clientX - translateX;
        startY = e.clientY - translateY;
        lightboxImg.style.cursor = "grabbing";
      }
    });

    document.addEventListener("mousemove", (e) => {
      if (!isDragging) return;
      translateX = e.clientX - startX;
      translateY = e.clientY - startY;
      updateTransform();
    });

    document.addEventListener("mouseup", () => {
      isDragging = false;
      if (lightboxImg) {
        lightboxImg.style.cursor = currentZoom > 1 ? "grab" : "default";
      }
    });
  });
</script>
